<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextArea?>
<GridPane xmlns:fx="http://javafx.com/fxml" hgap="15" vgap="5">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="name" id="my-text-field" GridPane.columnIndex="1" GridPane.rowIndex="0"
               promptText="Enter your name"/>
    <Label text="Your biography:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextArea fx:id="biography" id="my-text-field" GridPane.columnIndex="1" GridPane.rowIndex="2"
              promptText="Enter your biography here"/>
    <Button id="my-btn" text="Click me" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>